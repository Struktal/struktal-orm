{
    "name": "struktal/struktal-orm",
    "description": "PHP library implementing the DAO pattern for easier database handling",
    "keywords": [
        "database",
        "objects"
    ],
    "type": "library",
    "license": "MIT",
    "autoload":{
        "psr-4": {
            "struktal\\ORM\\": "src/",
            "struktal\\ORM\\Database\\": "src/database/"
        }
    },
    "require": {
        "php": ">=8.2.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "pestphp/pest": "~v3.8.2"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/pest"
        ]
    }
}
